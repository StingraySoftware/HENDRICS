#!/usr/bin/env python
# Licensed under a 3-clause BSD style license - see LICENSE.rst

from __future__ import (absolute_import, unicode_literals, division,
                        print_function)

import matplotlib.pyplot as plt
from maltpynt.io import get_file_type
from maltpynt.plot import plot_lc, plot_cospectrum, plot_pds
import argparse

description = \
    'Plot the content of MaLTPyNT light curves and frequency spectra'
parser = argparse.ArgumentParser(description=description)
parser.add_argument("files", help="List of files", nargs='+')

if __name__ == '__main__':
    import sys
    if len(sys.argv) == 1:
        parser.print_help()
        sys.exit(1)
    args = parser.parse_args()
    for fname in args.files:
        ftype, contents = get_file_type(fname)
        if ftype == 'lc':
            plot_lc(fname)
        elif ftype[-4:] == 'cpds':
            plot_cospectrum(fname)
        elif ftype[-3:] == 'pds':
            plot_pds(fname)

    plt.show()
